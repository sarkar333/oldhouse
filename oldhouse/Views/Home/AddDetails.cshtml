    <br>

    <input type="radio" @*id="html"*@ name="UserType" value="User">
    <label for="html">Female</label>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </div>
</div>
}

